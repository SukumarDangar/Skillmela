
<%- include("partials/header.ejs") %>

    <section class="dashboard">
            <div class="dashboard-img-container">

                <% if (profile.cover_photo === null) { %>
                    <img src="/images/cover.jpg" alt="Profile" class="cover-photo">
                <% } else { %>
                    <img src="<%= profile.cover_photo %>" alt="Profile" class="cover-photo">
                <% } %>
                <button class="button1" onclick="showCoverModal()">Update Cover Photo</button>
                <button class="button2" onclick="showProfileModal()">Update Profile photo!</button>
                <div class="photo">
                    <% if (profile.profile_photo === null) { %>
                        <img src="/images/user.jpg" alt="Profile" class="profiel-img">
                    <% } else { %>
                        <img src="<%= profile.profile_photo %>" alt="Profile" class="profiel-img">
                    <% } %> 
                </div>
                <!-- Cover Photo Modal -->
                <div id="coverModal" class="modal">
                    <div class="modal-content">
                        <h3>Update Cover Photo</h3>
                        <form action="/upload-cover-photo/<%= profile.user_id %>" method="POST" enctype="multipart/form-data">
                            <input type="file" name="coverPhoto" required><br><br>
                            <button type="submit" class="save-btn">Save</button>
                            <button type="button" class="cancel-btn" onclick="hideCoverModal()">Cancel</button>
                        </form>
                    </div>
                </div>

                <!-- Profile Photo Modal -->
                <div id="profileModal" class="modal">
                    <div class="modal-content">
                        <h3>Update Profile Photo</h3>
                        <form action="/upload-profile-photo/<%= profile.user_id %>" method="POST" enctype="multipart/form-data">
                            <input type="file" name="profilePhoto" required><br><br>
                            <button type="submit" class="save-btn">Save</button>
                            <button type="button" class="cancel-btn" onclick="hideProfileModal()">Cancel</button>
                        </form>
                    </div>
                </div>
                
            </div>
            <!-- general and add profiel -->
            <div class="general-addProfiel">
                <!-- <button class="button1 general-addProfiel-button">General</button> -->
                <!-- <button class="button2 general-addProfiel-button">Add Profile Picture</button> -->
                <a href="/edit-profile/<%= profile.user_id %>" class="button3 general-addProfiel-button" >Edit Profile</a>
            </div>

